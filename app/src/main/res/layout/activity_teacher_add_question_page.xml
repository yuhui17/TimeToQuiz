<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".TeacherAddQuestionPage">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Toolbar_AddQuestionPage"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/gradient_toolbar_background"
        android:orientation="vertical"
        android:theme="@style/ToolbarColoredBackArrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:subtitleTextColor="@color/white"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/button_AddQuestionDetails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Toolbar_AddQuestionPage">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Question"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"

                />

            <EditText
                android:id="@+id/text_Question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:ems="10"
                android:fontFamily="monospace"
                android:hint="Enter your question here"
                android:inputType="textMultiLine"
                android:lines="4"
                android:maxLines="8"
                android:minHeight="64dp"
                android:textColor="@color/black"
                android:background="@color/white"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Option 1"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/text_Option1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:fontFamily="monospace"
                android:hint="Enter Your Option 1"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:minHeight="48dp"
                android:textStyle="normal"
                android:background="@color/white"
                android:textAlignment="textStart"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Option 2"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/text_Option2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:fontFamily="monospace"
                android:hint="Enter Your Option 2"
                android:minHeight="48dp"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:background="@color/white"
                android:textSize="18sp"
                android:textStyle="normal"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Option 3"
                android:textColor="@color/black"
                android:textSize="18sp"

                android:textStyle="bold" />

            <EditText
                android:id="@+id/text_Option3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:fontFamily="monospace"
                android:hint="Enter Your Option 3"
                android:minHeight="48dp"
                android:inputType="textPersonName"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="normal"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Option 4"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/text_Option4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:fontFamily="monospace"
                android:hint="Enter Your Option 4"
                android:minHeight="48dp"
                android:background="@color/white"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="normal"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Answer"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/text_Answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:fontFamily="monospace"
                android:hint="Enter Your Answer"
                android:minHeight="48dp"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:background="@color/white"
                tools:ignore="TouchTargetSizeCheck" />


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_AddQuestionDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_rounded_rectangle"
        android:text="Add Question"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

</androidx.constraintlayout.widget.ConstraintLayout>